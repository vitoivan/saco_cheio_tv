{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "exclude": [
      "node_modules",
    ],
  },
  "include": [
    "src/components",
    "src/pages",
    "src/types",
    "src/index.tsx",
    "src/css",
    "src/assets",
    "src/router"
  ],
  "exclude": [
    "node_modules",
    "src/mocks"
  ],
  "typeRoots" : ["node_modules/@types", "src/types"]
}
